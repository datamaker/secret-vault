# ===========================================
# Secret Vault Configuration
# ===========================================
# Copy this file to .env and configure:
#   cp .env.example .env
#
# Generate keys with:
#   openssl rand -hex 32
# ===========================================

# Database password (change this!)
POSTGRES_PASSWORD=your-secure-password-here

# Encryption key (REQUIRED - 64 character hex string)
# Generate: openssl rand -hex 32
# WARNING: If you lose this key, all secrets become unrecoverable!
MASTER_ENCRYPTION_KEY=

# JWT secrets (REQUIRED - 64 character hex strings)
# Generate: openssl rand -hex 32
JWT_SECRET=
JWT_REFRESH_SECRET=

# CORS origin (your frontend URL)
# For local: http://localhost
# For production: https://vault.yourdomain.com
CORS_ORIGIN=http://localhost

# Port to expose (default: 80)
PORT=80
